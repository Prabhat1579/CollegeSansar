<html lang='en'>
   <head>
      <meta charset='UTF-8' />
      <meta http-equiv='X-UA-Compatible' content='IE=edge' />
      <meta name='viewport' content='width=device-width, initial-scale=1.0' />
      <title>Career</title>
      <!-- CSS only -->
      <link
         href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
         rel='stylesheet'
         integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
         crossorigin='anonymous'
      />
   </head>
   <body>

      <nav class='px-4 navbar navbar-expand-lg navbar-light bg-light'>
         <a class='navbar-brand' href='/admin'>Admin</a>
         <button
            class='navbar-toggler'
            type='button'
            data-toggle='collapse'
            data-target='#navbarNavAltMarkup'
            aria-controls='navbarNavAltMarkup'
            aria-expanded='false'
            aria-label='Toggle navigation'
         >
            <span class='navbar-toggler-icon'></span>
         </button>
         <div class='collapse navbar-collapse' id='navbarNavAltMarkup'>
            <div class='navbar-nav'>
               <a class='nav-item nav-link' href='/admin/college'>College</a>
               <a class='nav-item nav-link active' href='/admin/career'>Career</a>
               <a class='nav-item nav-link' href='/admin/exam'>Exam</a>
            </div>
         </div>
      </nav>

      {{#if careerDeleted}}
         <div class='alert alert-danger alert-dismissible fade show' role='alert'>
            Career Deleted Successfully!
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
         </div>
      {{/if}}

      <div class='col-12 col-sm-6 px-4 mx-auto my-5'>

         <h4>Add Career</h4>

         {{#if careerAdded}}
            <div class='alert alert-success alert-dismissible fade show' role='alert'>
               Career Added Successfully!
               <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>

         {{/if}}

         <form action='/admin/career/create' method='POST' enctype='multipart/form-data'>
            <div class='my-2'>
               <label class='small'>Career Name</label>
               <input class='form-control' type='text' name='careerName' />
            </div>

            <div class='my-2'>
               <label class='small'>Career Description</label>
               <textarea class='form-control' name='careerDescription'></textarea>
            </div>

            <div class='my-2'>
               <label class='small'>Featured Image</label>
               <input class='form-control' type='file' name='featuredImage' />
            </div>

            <div class='my-3'>
               <button class='btn btn-primary'>Add Career</button>
            </div>
         </form>
      </div>

      <p class='display-4 px-4'>Blog Cards</p>

      <div class='px-4 d-flex gap-3 flex-wrap py-4'>
         {{#each careers}}
            <div class='card' style='width: 18rem;'>
               <img src={{this.featuredImage}} class='card-img-top' alt='...' />
               <div class='card-body'>
                  <h5 class='card-title'>{{this.careerName}}</h5>
                  <p class='card-text'>{{this.shortDescription}}</p>
                  <div>
                     <button class='btn btn-primary'>Edit</button>
                     <a href={{this.deleteLink}} class='btn btn-danger'>Delete</a>
                  </div>
               </div>
            </div>

         {{/each}}
      </div>

      <!-- JavaScript Bundle with Popper -->
      <script
         src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
         integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
         crossorigin='anonymous'
      ></script>
   </body>
</html>