<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<title>College</title>
		<!-- CSS only -->
		<link
			href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
			rel='stylesheet'
			integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
			crossorigin='anonymous'
		/>
	</head>
	<body>

		<nav class='px-4 navbar navbar-expand-lg navbar-light bg-light'>
			<a class='navbar-brand' href='/admin'>Admin</a>
			<button
				class='navbar-toggler'
				type='button'
				data-toggle='collapse'
				data-target='#navbarNavAltMarkup'
				aria-controls='navbarNavAltMarkup'
				aria-expanded='false'
				aria-label='Toggle navigation'
			>
				<span class='navbar-toggler-icon'></span>
			</button>
			<div class='collapse navbar-collapse' id='navbarNavAltMarkup'>
				<div class='navbar-nav'>
					<a class='nav-item nav-link active' href='/admin/college'>Add College</a>
					<a class='nav-item nav-link' href='/admin/career'>Add Career</a>
					<a class='nav-item nav-link' href='/admin/exam'>Add Exam</a>
				</div>
			</div>
		</nav>

		<div class='col-12 col-sm-9 px-4 mx-auto my-5'>

			<h4>Update College</h4>

			{{#if collegeUpdated}}
				<div class='alert alert-success alert-dismissible fade show' role='alert'>
					College Updated Successfully!
					<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
				</div>
			{{/if}}

			<form action={{postLink}} method='POST'>
				<div class='my-2'>
					<label for='name'>Name</label>
					<input class='form-control' value={{name}} name='name' type='text' id='name' />
				</div>

				<div class='my-2'>
					<label for='location'>Location</label>
					<input class='form-control' value={{location}} name='location' type='text' id='location' />
				</div>

				<div class='my-2'>
					<label for='fee'>Fee Structure</label>
					<input class='form-control editor' value={{fee}} name='fee' type='text' id='fee' />
				</div>

				<div class='my-2'>
					<label for='category'>Category</label>
					<input class='form-control' value={{category}} name='category' type='text' id='category' />
					<small class='text-muted'>Available Options: Arts, Science, Computer Science, Engineering, Medicine,
						Nursing, Architecture, Agriculture, Design, Aviation</small>
				</div>

				<div class='my-2'>
					<label for='facility'>Facilities</label>
					<input class='form-control' value={{facilities}} name='facility' type='text' id='facility' />
					<small class='text-muted'>Example: Library, Canteen</small>
				</div>

				<div class='my-2'>
					<label for='courses'>Courses Offered</label>
					<textarea class='form-control ' name='courses' type='text' id='courses'>
						{{courses}}
					</textarea>
				</div>

				<div class='my-2'>
					<label for='description'>Description</label>
					<textarea class='form-control' name='description' type='text' id='description'>
						{{description}}
					</textarea>
				</div>

				<div class='my-2'>
					<label for='eligibility'>Eligibility</label>
					<textarea class='form-control' name='eligibility' type='text' id='eligibility'>
						{{eligibility}}</textarea>
				</div>

				<div class='my-2'>
					<label for='thumbnail'>Featured Image</label>
					<input
						class='form-control'
						value={{featuredImage}}
						placeholder='enter image name'
						name='thumbnail'
						type='text'
						id='thumbnail'
					/>
				</div>

				<div class='my-3'>
					<button class='btn btn-primary'>Update College</button>
				</div>
			</form>

		</div>

		<!-- JavaScript Bundle with Popper -->
		<script
			src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
			integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
			crossorigin='anonymous'
		></script>

		<script>
			var alertList = document.querySelectorAll('.alert'); var alerts = [].slice.call(alertList).map(function
			(element) { return new bootstrap.Alert(element) })
		</script>
	<script src="https://cdn.ckeditor.com/ckeditor5/34.1.0/classic/ckeditor.js"></script>
	<script>
    ClassicEditor
        .create( document.querySelector( '.editor' ) )
        .catch( error => {
            console.error( error );
        } );
</script>
	</body>
</html>