<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<link rel='stylesheet' href='/css/career.css' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Montserrat:wght@500&family=Poppins:ital,wght@0,200;0,300;1,300&display=swap'
			rel='stylesheet'
		/>
		<title>Colleges Sansar</title>

		<!-- CSS only -->
		<link
			href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
			rel='stylesheet'
			integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
			crossorigin='anonymous'
		/>
	</head>

	<body>
		<header>
			<nav class='m-3'>
				<a href='/'><img src='/assets/logo.png' alt='logo' /></a>
				<div class='nav-links p-0 d-flex justify-content-between align-items-center'>
					<ul class='m-0 d-flex align-items-center justify-content-between w-100 px-4'>
						<div class='d-flex gap-3'>
							<li><a href='/college'>College</a></li>
							<li><a href='/career'>Careers</a></li>
							<li><a href='/Exam'>Exams</a></li>
						</div>

						<div class='d-flex gap-2'>
							{{#unless isLoggedIn}}
								<a
									class='btn btn-primary d-flex align-items-center justify-content-center py-3 text-light'
									href='/Login'
								>Log In</a>
								<a
									class='btn btn-primary d-flex align-items-center justify-content-center py-3 text-light'
									href='/Register'
								>Register</a>
							{{/unless}}
						</div>

					</ul>
					<div class='d-flex align-items-center gap-3'>
						{{#if isLoggedIn}}
							<span style='white-space: nowrap;'>Hi {{username}}</span>
							<div class='btn btn-primary text-white p-0 d-flex align-items-center justify-content-center py-3'>
								<a class='text-light text-decoration-none p-0' href='/auth/logout'>Log Out</a>
							</div>
						{{/if}}
					</div>
				</div>
			</nav>
			<hr />
		</header>

		<main class='p-3'>
			<div class='my-4 d-flex justify-content-center flex-column align-items-center'>
				<p class='display-4'>What's your goal?</p>
				<form class='my-3 w-50' action='/career/search-career' method='POST'>
					<div class='d-flex justify-content-center gap-2'>
						<input
							class='form-control'
							type='text'
							name='search'
							id='SC1'
							placeholder='type what you are looking for... eg. "IT"'
						/>

						<button
							class='btn text-light m-0'
							style='height: 100%; padding: 10px 20px; background-color: #F24E1E;'
						>Search</button>
					</div>
				</form>
			</div>

			<div class='w-75 mx-auto my-5'>
				<h2>BLOGS</h2>

				<div class='d-flex gap-3 flex-wrap py-4'>
					{{#each careers}}
						<div class='card' style='width: 18rem;'>
							<img src={{this.featuredImage}} class='card-img-top' alt='...' />
							<div class='card-body'>
								<h5 class='card-title'>{{this.careerName}}</h5>
								<p class='card-text small'>{{this.shortDescription}}</p>
								<div>
									<a href={{this.viewLink}} class='btn w-100 btn-block p-0 btn-primary'>View</a>
								</div>
							</div>
						</div>

					{{/each}}
				</div>

			</div>

			<div class='w-75 mx-auto'>
				<h2>COLLEGES</h2>

				<div class='d-flex flex-wrap gap-3'>
					{{#each colleges}}
						<a class='college-items shadow-sm rounded text-muted text-decoration-none' href={{this.link}}>
							<img class='rounded-top' src={{this.img}} alt={{this.name}} />
							<div class='p-2'>
								<h4>{{this.name}}</h4>
								<div class='my-2'>
									<small>category: {{this.category}}</small>
								</div>
								<div>
									<small>{{this.description}}</small>
								</div>
							</div>
						</a>
					{{/each}}
				</div>
			</div>

		</main>

	</body>
</html>