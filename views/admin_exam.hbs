<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<title>Exam</title>
		<!-- CSS only -->
		<link
			href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
			rel='stylesheet'
			integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
			crossorigin='anonymous'
		/>
	</head>
	<body>

		<nav class='px-4 navbar navbar-expand-lg navbar-light bg-light'>
			<a class='navbar-brand' href='/admin'>Admin</a>
			<button
				class='navbar-toggler'
				type='button'
				data-toggle='collapse'
				data-target='#navbarNavAltMarkup'
				aria-controls='navbarNavAltMarkup'
				aria-expanded='false'
				aria-label='Toggle navigation'
			>
				<span class='navbar-toggler-icon'></span>
			</button>
			<div class='collapse navbar-collapse' id='navbarNavAltMarkup'>
				<div class='navbar-nav'>
					<a class='nav-item nav-link' href='/admin/college'> Add College</a>
					<a class='nav-item nav-link' href='/admin/career'>Add Career</a>
					<a class='nav-item nav-link active' href='/admin/exam'>Add Exam</a>
				</div>
			</div>
		</nav>

		{{#if examDeleted}}
			<div class='alert alert-danger alert-dismissible fade show' role='alert'>
				Exam Deleted Successfully!
				<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
			</div>
		{{/if}}

		<div class='col-12 col-sm-6 mx-auto px-4 my-5'>
			<h4>Add Exam</h4>

			{{#if examAdded}}
				<div class='alert alert-success alert-dismissible fade show' role='alert'>
					Exam Added Successfully!
					<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
				</div>

			{{/if}}

			<form action='/admin/exam/add' method='POST' encType='multipart/form-data'>
				<div class='my-2'>
					<label>Exam Title</label>
					<input class='form-control' type='text' name='examTitle' />
				</div>

				<div class='my-2'>
					<label>Exam Type</label>
					<input class='form-control' type='text' name='examType' />
				</div>

				<div class='my-2'>
					<label>Exam Category</label>
					<input class='form-control' type='text' name='examCategory' />
				</div>

				<div class='my-2'>
					<label>Overview</label>
					<textarea class='form-control' type='text' name='overview'></textarea>
				</div>

				<div class='my-2'>
					<label>Contact</label>
					<input class='form-control' type='text' name='contact' />
				</div>

				<div class='my-2'>
					<label>Eligibility</label>
					<textarea class='form-control' type='text' name='eligibility'></textarea>
				</div>

				<div class='my-2'>
					<label>Syllabus</label>
					<input class='form-control' type='file' name='syllabus' />
				</div>

				<div class='my-2'>
					<label>Practice Paper</label>
					<input class='form-control' type='file' name='practicePaper' />
				</div>

				<div class='my-2'>
					<label>Exam Date</label>
					<input class='form-control' placeholder='2022-05-10' type='text' name='examDate' />
				</div>

				<div class='my-2'>
					<label>Admit Card Release Date</label>
					<input class='form-control' type='text' name='admitCardReleaseDate' />
				</div>

				<div class='my-2'>
					<label>Result</label>
					<input class='form-control' type='text' name='result' />
				</div>

				<div class='my-2'>
					<label for='image'>Featured Image</label>
					<input class='form-control' type='file' name='featuredImage' />
				</div>

				<div class='my-2'>
					<button class='btn btn-primary'>Add Exam</button>
				</div>
			</form>
		</div>

		<hr />

		<p class='display-4 px-4'>All Exams</p>
		<div class='py-0 px-4 table-responsive'>
			<table class='table table-striped'>

				<thead>
					<tr>
						<th scope='col'>#</th>
						<th scope='col'>Actions</th>
						<th scope='col'>Exam Title</th>
						<th scope='col'>Exam Type</th>
						<th scope='col'>Overview</th>
						<th scope='col'>Contact</th>
						<th scope='col'>Eligibility</th>
						<th scope='col'>Exam Date</th>
						<th scope='col'>Admit Card Release Date</th>
						<th scope='col'>Result</th>
						<th scope='col'>Syllabus</th>
						<th scope='col'>Practice paper</th>
						<th scope='col'>Featured Image</th>
					</tr>
				</thead>

				<tbody>

					{{#each exams}}
						<tr>

							<th scope='row'>{{@index}}</th>
							<td>
								<div class='d-flex gap-2'>
									<button class='btn btn-sm btn-info'>edit</button>
									<a href={{this.deleteLink}} class='btn btn-sm btn-danger'>delete</a>
								</div>
							</td>
							<td>{{this.examTitle}}</td>
							<td>{{this.examType}}</td>
							<td>{{this.overview}}</td>
							<td>{{this.contact}}</td>
							<td>{{this.eligibility}}</td>
							<td>{{this.examDate}}</td>
							<td>{{this.admitCardReleaseDate}}</td>
							<td>{{this.result}}</td>
							<td><img height='60' src={{this.syllabus}} alt='syllabus' /></td>
							<td><img height='60' src={{this.practicePaper}} alt='practice paper' /></td>
							<td><img height='60' src={{this.featurtedImage}} alt='featured image' /></td>

						</tr>

					{{/each}}

				</tbody>
			</table>
		</div>

		<!-- JavaScript Bundle with Popper -->
		<script
			src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
			integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
			crossorigin='anonymous'
		></script>
	</body>
</html>