<html lang='en'>
   <head>
      <meta charset='UTF-8' />
      <meta http-equiv='X-UA-Compatible' content='IE=edge' />
      <meta name='viewport' content='width=device-width, initial-scale=1.0' />
      <title>College</title>
      <!-- CSS only -->
      <link
         href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
         rel='stylesheet'
         integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
         crossorigin='anonymous'
      />
   </head>
   <body>

      <nav class='px-4 navbar navbar-expand-lg navbar-light bg-light'>
         <a class='navbar-brand' href='/admin'>Admin</a>
         <button
            class='navbar-toggler'
            type='button'
            data-toggle='collapse'
            data-target='#navbarNavAltMarkup'
            aria-controls='navbarNavAltMarkup'
            aria-expanded='false'
            aria-label='Toggle navigation'
         >
            <span class='navbar-toggler-icon'></span>
         </button>
         <div class='collapse navbar-collapse' id='navbarNavAltMarkup'>
            <div class='navbar-nav'>
               <a class='nav-item nav-link active' href='/admin/college'>College</a>
               <a class='nav-item nav-link' href='/admin/career'>Career</a>
               <a class='nav-item nav-link' href='/admin/exam'>Exam</a>
            </div>
         </div>
      </nav>

      <div class='col-12 col-sm-9 px-4 mx-auto my-5'>

         <h4>Add College</h4>

         {{#if collegeCreated}}
            <div class='alert alert-success alert-dismissible fade show' role='alert'>
               College Added Successfully!
               <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
         {{/if}}

         <form action='/admin/college' method='POST'>
            <div class='my-2'>
               <label for='name'>Name</label>
               <input class='form-control' name='name' type='text' id='name' />
            </div>

            <div class='my-2'>
               <label for='location'>Location</label>
               <input class='form-control' name='location' type='text' id='location' />
            </div>

            <div class='my-2'>
               <label for='fee'>Fee Structure</label>
               <input class='form-control' name='fee' type='text' id='fee' />
            </div>

            <div class='my-2'>
               <label for='category'>Category</label>
               <input class='form-control' name='category' type='text' id='category' />
               <small class='text-muted'>Available Options: Arts, Science, Computer Science, Engineering, Medicine,
                  Nursing, Architecture, Agriculture, Design, Aviation</small>
            </div>

            <div class='my-2'>
               <label for='courses'>Courses Offered</label>
               <textarea class='form-control' name='courses' type='text' id='courses'></textarea>
            </div>

            <div class='my-2'>
               <label for='description'>Description</label>
               <textarea class='form-control' name='description' type='text' id='description'></textarea>
            </div>

            <div class='my-2'>
               <label for='eligibility'>Eligibility</label>
               <textarea class='form-control' name='eligibility' type='text' id='eligibility'></textarea>
            </div>

            <div class='my-2'>
               <label for='thumbnail'>Featured Image</label>
               <input class='form-control' placeholder='enter image name' name='thumbnail' type='text' id='thumbnail' />
            </div>

            <div class='my-3'>
               <button class='btn btn-primary'>Add College</button>
            </div>
         </form>

      </div>

      <div class='w-75 mx-auto mb-5'>
         <hr />
         <h4>Colleges List</h4>
         <table class='table table-striped table-responsive table-hover'>
            <thead>
               <tr>
                  <th scope='col'>#</th>
                  <th scope='col'>Name</th>
                  <th scope='col'>Fee</th>
                  <th scope='col'>Description</th>
                  <th scope='col'>Thumbnail</th>
                  <th scope='col'>Actions</th>
               </tr>
            </thead>
            <tbody>
               {{#each colleges}}
                  <tr>
                     <th scope='row'>{{@index}}</th>
                     <td>{{this.name}}</td>
                     <td>{{this.fee}}</td>
                     <td>{{this.description}}</td>
                     <td>{{this.thumbnail}}</td>
                     <td>
                        <form class='d-flex align-items-center gap-2' action={{this.formAction}} method='POST'>
                           <button
                              type='button'
                              class='btn btn-sm btn-info'
                              data-toggle='modal'
                              data-target='#exampleModal'
                           >Edit</button>
                           <button type='submit' class='btn btn-sm btn-danger'>Delete</button>
                        </form>

                        <div
                           class='modal fade'
                           id='exampleModal'
                           tabindex='-1'
                           role='dialog'
                           aria-labelledby='exampleModalLabel'
                           aria-hidden='true'
                        >
                           <div class='modal-dialog' role='document'>
                              <h2>Edit Modal</h2>
                           </div>
                        </div>
                     </td>
                  </tr>
               {{/each}}
            </tbody>
         </table>

         <div
            class='modal fade'
            id='exampleModal'
            tabindex='-1'
            role='dialog'
            aria-labelledby='exampleModalLabel'
            aria-hidden='true'
         >
            <div class='modal-dialog' role='document'>
               <h2>Edit Modal</h2>
            </div>
         </div>

      </div>

      <!-- JavaScript Bundle with Popper -->
      <script
         src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
         integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
         crossorigin='anonymous'
      ></script>

      <script>
         var alertList = document.querySelectorAll('.alert'); var alerts = [].slice.call(alertList).map(function
         (element) { return new bootstrap.Alert(element) })
      </script>

   </body>
</html>