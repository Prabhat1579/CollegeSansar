<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<title>Career</title>
		<!-- CSS only -->
		<link
			href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
			rel='stylesheet'
			integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
			crossorigin='anonymous'
		/>
	</head>
	<body>

		<nav class='px-4 navbar navbar-expand-lg navbar-light bg-light'>
			<a class='navbar-brand' href='/admin'>Admin</a>
			<button
				class='navbar-toggler'
				type='button'
				data-toggle='collapse'
				data-target='#navbarNavAltMarkup'
				aria-controls='navbarNavAltMarkup'
				aria-expanded='false'
				aria-label='Toggle navigation'
			>
				<span class='navbar-toggler-icon'></span>
			</button>
			<div class='collapse navbar-collapse' id='navbarNavAltMarkup'>
				<div class='navbar-nav'>
					<a class='nav-item nav-link' href='/admin/college'>Add College</a>
					<a class='nav-item nav-link active' href='/admin/career'>Add Career</a>
					<a class='nav-item nav-link' href='/admin/exam'>Add Exam</a>
				</div>
			</div>
		</nav>

		{{#if careerDeleted}}
			<div class='alert alert-danger alert-dismissible fade show' role='alert'>
				Career Deleted Successfully!
				<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
			</div>
		{{/if}}

		<div class='col-12 col-sm-6 px-4 mx-auto my-5'>

			<h4>Edit Career</h4>

			{{#if careerUpdated}}
				<div class='alert alert-success alert-dismissible fade show' role='alert'>
					Career Updated Successfully!
					<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
				</div>

			{{/if}}

			<form action={{editLink}} method='POST' enctype='multipart/form-data'>
				<div class='my-2'>
					<label class='small'>Career Name</label>
					<input class='form-control' type='text' value={{careerName}} name='careerName' />
				</div>

				<div class='my-2'>
					<label class='small'>Career Description</label>
					<textarea id="editor" class='form-control' name='careerDescription'>{{careerDescription}}</textarea>
				</div>

				<div class='my-2'>
					<label class='small'>Featured Image</label>
					<input class='form-control' type='file' name='featuredImage' />
				</div>

				<div class='my-3'>
					<button type='submit' class='btn btn-primary'>Update Career</button>
				</div>
			</form>
		</div>

		<!-- JavaScript Bundle with Popper -->
		<script
			src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
			integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
			crossorigin='anonymous'
		></script>
			<script src="https://cdn.ckeditor.com/ckeditor5/34.1.0/classic/ckeditor.js"></script>
	<script>
    ClassicEditor
        .create( document.querySelector( '#editor' ) )
        .catch( error => {
            console.error( error );
        } );
</script>
	</body>
</html>